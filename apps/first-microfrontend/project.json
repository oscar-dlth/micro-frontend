{
  "name": "first-microfrontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "first-microfrontend",
  "sourceRoot": "apps/first-microfrontend/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/first-microfrontend",
        "index": "apps/first-microfrontend/src/index.html",
        "main": "apps/first-microfrontend/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "apps/first-microfrontend/tsconfig.app.json",
        "assets": [
          "apps/first-microfrontend/src/favicon.ico",
          "apps/first-microfrontend/src/assets"
        ],
        "styles": [
          "apps/first-microfrontend/src/styles.less"
        ],
        "scripts": [],
        "customWebpackConfig": {
          "path": "apps/first-microfrontend/webpack.config.js"
        },
        "commonChunk": false
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/first-microfrontend/webpack.prod.config.js"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:webpack-dev-server",
      "configurations": {
        "production": {
          "browserTarget": "first-microfrontend:build:production"
        },
        "development": {
          "browserTarget": "first-microfrontend:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 4200,
        "publicHost": "http://localhost:4200"
      }
    },
    "extract-i18n": {
      "executor": "ngx-build-plus:extract-i18n",
      "options": {
        "browserTarget": "first-microfrontend:build",
        "extraWebpackConfig": "apps/first-microfrontend/webpack.config.js"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/first-microfrontend/**/*.ts",
          "apps/first-microfrontend/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/first-microfrontend/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
